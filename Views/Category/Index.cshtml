@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

@*It will Display Alert Message*@
<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">
                category list
            </h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-primary">
                 <i class="bi bi-plus-circle"></i> &nbsp; Create new category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display order</th>
            <th>Actions</th>
        </tr>
       </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td>
                   <a asp-controller="Category" asp-action="Edit" class="btn btn-sm btn-secondary mx-2" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i></a> 
                   <a asp-controller="Category" asp-action="Delete" class="btn btn-sm btn-outline-danger mx-2" asp-route-id="@obj.Id"> <i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
